{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "es2022",
        "module": "commonjs",
        "outDir": "dist",
        "declaration": false,
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ],
}